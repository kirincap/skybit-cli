{
  "$schema": "https://charm.land/crush.json",
  "providers": {
    "openrouter": {
      "type": "openai",
      "base_url": "https://openrouter.ai/api/v1",
      "api_key": "$(echo $OPENROUTER_API_KEY)",
      "models": [
        { "id": "anthropic/claude-3-opus", "name": "Claude 3 Opus" }
      ]
    }
  },
  "model": "anthropic/claude-3-opus",
  "mcp": {
    "skybit": {
      "type": "http",
      "url": "http://localhost:8787/mcp"
    }
  },
  "permissions": {
    "allowed_tools": [
      "data.snapshot",
      "trade.preview",
      "policy.check",
      "trade.place_order.live",
      "trade.cancel.live",
      "trade.cancel_all.live",
      "broker.accounts",
      "broker.positions",
      "audit.log"
    ]
  },
  "options": {
    "debug": true
  }
}
